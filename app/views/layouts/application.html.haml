!!!
%html
%head
	%title Thisprop
	= stylesheet_link_tag 'http://yui.yahooapis.com/pure/0.5.0/pure-min.css', media: 'all'
	= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', media: 'all'
	= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css', media: 'all'
	= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true 

	= csrf_meta_tags 

%body
	.navbar.navbar-default
		.container-fluid
			.navbar-header
				%button.navbar-toggle.collapsed{ :type => 'button', :data => { :toggle => 'collapse', :target => '#thisprop-navbar-collapse-1' } }
					%span.sr-only Toggle Navigation
					%span.icon-bar
					%span.icon-bar
					%span.icon-bar
				%a.navbar-brand{ :href => '#' } ThisProp
			.collapse.navbar-collapse#thisprop-navbar-collapse-1
				%ul.nav.navbar-nav.navbar-right
					%li
						%a{ :href => '#' } Buy
					%li
						%a{ :href => '#' } Sell
					%li
						%a{ :href => '#' } Rent
					- if user_signed_in? then
						%li.dropdown
							%a.dropdown-toggle{ :href => '#', :data => { :toggle => 'dropdown' }, :role => 'button' }
								%img{ :src => current_user.image, :width => '28px', :height => '28px' } 
								#{current_user.name}
								%span.caret
							%ul.dropdown-menu{ :role => 'menu' }
								%li
									%a{ :href => '#' } My Account
								%li.divider
								%li
									%a{ :href => sign_out_path } Log Out
					- else
						%li
							%a{ :href => '#', :data => { :toggle => 'modal', :target => '#login-box' } } Login
						
	.pure-g
		.pure-u-1
			= yield

	.modal.fade#login-box{ :tabindex => -1, :role => 'dialog' }
		.modal-dialog
			.modal-content
				.modal-header
					%button.close{ :type => 'button', :data => { :dismiss => 'modal' } } &times;
					%h4.modal-title Login
				.modal-body
					%p login stuff here
					= link_to 'Sign in w/ Facebook', user_omniauth_authorize_path(:facebook)
	// javscript at the end
	= javascript_include_tag 'application', 'data-turbolinks-track' => true 
	= javascript_include_tag  'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js'
